{
  "name": "@viewar/config-eslint",
  "version": "1.10.0",
  "description": "ViewAR's shareable config for EsLint",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build && rimraf bundle",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "lint": "npx prettier **/*.{css,scss,md,json} --write && npx eslint --fix \"**/*.*{js,jsx}\" --format pretty"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "author": "Stefan Friedl <sf@viewar.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "esmodules": true,
            "browsers": [
              "> 1%",
              "last 2 versions",
              "not ie <= 8"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": "https://github.com/viewar/config-eslint",
  "private": false,
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "viewar",
    "eslint",
    "shared config",
    "prettier"
  ],
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "eslint": "^6.7.1",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-module-utils": "^2.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^3.0.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "mocha": "^6.2.0"
  }
}
