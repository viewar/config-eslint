{
  "name": "@viewar/config-eslint",
  "version": "1.10.0",
  "description": "ViewAR's shareable config for EsLint",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build && rimraf bundle",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "lint": "eslint . --ext \".js,.jsx,.ts,.tsx\" --fix --format pretty && prettier \"**/*.{css,scss,md,json}\" --write"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test"
    }
  },
  "author": "Stefan Friedl <sf@viewar.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "esmodules": true,
            "browsers": [
              "> 1%",
              "last 2 versions",
              "not ie <= 8"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": "https://github.com/viewar/config-eslint",
  "private": false,
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "keywords": [
    "viewar",
    "eslint",
    "shared config",
    "prettier"
  ],
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-eslint": "^10.1.0",
    "body-parser": "^1.19.0",
    "eslint": "^6.8.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-module-utils": "^2.6.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "mocha": "^7.1.2"
  }
}
